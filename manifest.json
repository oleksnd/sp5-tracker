{
  "manifest_version": 3,
  "name": "SP-5 Tracker",
  "version": "1.0",
  "description": "Простой трекер для отслеживания рабочих циклов по методике SP-5.",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sounds/break_end.mp3",
        "sounds/work_end.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
